<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAE959"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/juicy_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="283dp"
                app:srcCompat="@drawable/strawba" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="딸기바나나주스" />

            <Button
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_back"
                android:text="<이전"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <Button
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/ic_menu_close_clear_cancel"
                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사이즈"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <Button
                    android:id="@+id/button15"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/options_button"
                    android:text="M\n+0원" />

                <Button
                    android:id="@+id/button16"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/options_button"
                    android:text="XL \n+1800원" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="당도"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <Button
                    android:id="@+id/button17"
                    android:layout_width="0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="100%\n+0원"
                    android:background="@drawable/options_button"/>

                <Button
                    android:id="@+id/button18"
                    android:layout_width="0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="50%\n+0원"
                    android:background="@drawable/options_button"/>

                <Button
                    android:id="@+id/button19"
                    android:layout_width="0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0%\n+0원"
                    android:background="@drawable/options_button"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="토핑"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:baselineAligned="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button20"
                    android:layout_width="0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="코코넛젤리\n+500원"
                    android:background="@drawable/options_button"/>

                <Button
                    android:id="@+id/button23"
                    android:layout_width="0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="타피오카펄\n+500원"
                    android:background="@drawable/options_button"/>

                <Button
                    android:id="@+id/button24"
                    android:layout_width="0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="치즈폼\n+500원"
                    android:background="@drawable/options_button"/>
            </LinearLayout>

            <Button
                android:id="@+id/button26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_done"
                android:text="선택완료"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>